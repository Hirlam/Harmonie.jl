{
  "$id": "https://roelstappers.github.io/harmonie.schema.json",
  "$schema" : "http://json-schema.org/schema#",
  "title": "Harmonie experiment configuration",
  "description" : "Look at the Surfex and Observations tabs for examples. See in Observations/LISTE_LOC obstype how enum_titles can be used to give meaningfull names to integers. See Geometry/domain how we can insert information directly in the config_exp.json (Click JSON. no need for perl). See surfex/Namelist how namelist can be included (no need for perl). ",
  "options": {
    "disable_properties": true,
    "disable_edit_json": false,
    "disable_collapse": true
  },
  "format": "categories",
  "type": "object",
  "required": [
    "Main",
    "Geometry",
    "Nesting",
    "Assimilation",
    "Physics",
    "Surfex",
    "Observations",
    "EPS",
    "Postprocessing",
    "Archiving",
    "Aux"
  ],
  "properties": {
    "Main": {
      "$ref": "schema/main/main.schema.json"
    },
    "Geometry": {
      "$ref": "schema/geometry/geometry.schema.json"
    },
    "Nesting": {
      "$ref": "schema/nesting/nesting.schema.json"
    },
    "Assimilation": {
      "$ref": "schema/assimilation/assimilation.schema.json"
    },
    "Physics": {
      "$ref": "schema/physics/physics.schema.json"
    },
    "Surfex": {
      "$ref": "schema/surfex/surfex.schema.json"
    },
    "Observations": {
      "$ref": "schema/observations/observations.schema.json"
    },
    "EPS": {
      "type": "object"
    },
    "Postprocessing": {
      "type": "object"
    },
    "Archiving": {
      "type": "object"
    },
    "Aux": {
      "$ref": "schema/aux/aux.schema.json"
    }
  }
}
