{
  "type": "object",
  "additionalProperties": true,
  "options": {
    "disable_collapse": true,
    "disable_properties": true
  },
  "format": "grid",
  "required": [
    "HOST_MODEL",
    "HOST_SURFEX",        
    "BDSTRATEGY",
    "BDINT",
    "LSPBDC",
    "NBDMAX",
    "LUNBC"
  ],
  "properties": {
    "HOST_MODEL": {
      "type": "string",
      "enum": [
        "ifs",
        "hir",
        "ald",
        "ala",
        "aro"
      ],
      "default": "ifs"
    },
    "HOST_SURFEX": {
      "description": "host model has run with surfex?",
      "type": "string",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    },
    "NBDMAX" : {
      "description" : "Number of parallel interpolation tasks",
      "type" : "integer"    
    },        
    "BDSTRATEGY": {
      "type": "string",
      "description": "Which boundary strategy to follow as defined in scr/Boundary_strategy.pl",
      "enum": [
        "available",
        "simulate_operational",
        "same_forecast",
        "analysis_only",
        "e40",
        "era5",
        "latest",
        "RCR_operational"
      ],
      "options": {
        "enum_titles": [
          "available",
          "simulate_operational",
          "same_forecast | Use all boundaries from the same forecast, start from analysis",
          "analysis_only",
          "e40",
          "era5",
          "latest",
          "RCR_operational"
        ]
      },
      "default": "simulate_operational"
    },
    "BDINT": {
      "type": "integer",
      "description": "Boundary interval in hours",
      "enum": [
        1,
        2,
        3,
        6,
        12,
        24
      ],
      "default": 1
    },
    "LSPBDC": {
      "type": "string",
      "description": "Spectral boundary conditions option",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    },
    "LUNBC": {
      "type": "string",
      "description": "Apply upper nested boundary condition",
      "enum": [
        "yes",
        "no"
      ],
      "default": "yes"
    }
  }
}