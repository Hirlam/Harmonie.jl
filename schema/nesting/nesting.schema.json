{
  "type": "object",
  "options": {
    "disable_collapse": true,
    "disable_properties": true
  },
  "required": [
    "HOST_MODEL",
    "HOST_SURFEX",
    "SURFEX_INPUT_FORMAT",
    "NATIVE_INPUT_LFI",
    "BDSTRATEGY",
    "BDINT",
    "LSPBDC",
    "LUNBC"
  ],
  "properties": {
    "HOST_MODEL": {
      "type": "string",
      "enum": [
        "ifs",
        "hir",
        "ald",
        "ala",
        "aro"
      ],
      "default": "ifs"
    },
    "HOST_SURFEX": {
      "title": "host model has run with surfex?",
      "type": "string",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    },
    "SURFEX_INPUT_FORMAT": {
      "type": "string",
      "title": "Input format for host model run with surfex",
      "default": "lfi",
      "enum": [
        "fa",
        "lfi"
      ]
    },
    "NATIVE_INPUT_LFI": {
      "type": "string",
      "description": "yes if host PGD/PREP are lfi files converted to fa. Only relevant if SURFEX_INPUT_FORMAT=fa",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    },
    "BDSTRATEGY": {
      "type": "string",
      "enum": [
        "available",
        "simulate_operational",
        "same_forecast",
        "analysis_only",
        "e40",
        "era5",
        "latest",
        "RCR_operational"
      ],
      "options": {
        "enum_titles": [
          "available",
          "simulate_operational",
          "same_forecast | Use all boundaries from the same forecast, start from analysis",
          "analysis_only",
          "e40",
          "era5",
          "latest",
          "RCR_operational"
        ]
      },
      "default": "simulate_operational"
    },
    "BDINT": {
      "type": "integer",
      "description": "Boundary interval in hours",
      "enum": [
        1,
        2,
        3,
        6,
        12,
        24
      ],
      "default": 1
    },
    "LSPBDC": {
      "type": "string",
      "description": "Spectral boundary contions option",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    },
    "LUNBC": {
      "type": "string",
      "description": "Apply upper nested boundary condition",
      "enum": [
        "yes",
        "no"
      ],
      "default": "yes"
    }
  }
}