{
  "type": "object",
  "description": "These variables need to be put in a category or removed (moved to the scripts). Click properties to see if there are more variables.",
  "required": [
    "RUNNING_MODE",
    "SIMULATION_TYPE",
    "SINGLEOBS",
    "USE_MSG",
    "MSG_PATH",
    "Config",
    "hostdescriptions"
  ],
  "properties": {
    "CNMEXP": {
      "type": "string",
      "default": "HARM"
    },
    "ARSTRATEGY": {
      "type": "string",
      "description": "Archive strategy",
      "enum": [
        "minimum",
        "medium",
        "maximum"
      ],
      "options": {
        "enum_titles": [
          "minimum | only logs and vfld file",
          "medium | main results",
          "maximum | everything"
        ]
      },
      "default": "medium"
    },
    "ECFSGROUP": {
      "type": "string",
      "description": "Group in which to chgrp the ECMWF archive",
      "enum": [
        "default",
        "hirald"
      ],
      "default": "hirald"
    },
    "JB_INTERPOL" : {
      "type" : "string",
      "description": " Interpolation of structure functions from a pre-defined domain to your domain",
      "enum" : ["yes","no"],
      "default" : "no"
    },
    "TAUS" : {
      "type" : "integer",
      "description": "cut-off frequency in second",
      "enum" :[7200, 5400],
      "default" : 5400
    },
    "TSPAN" : { 
      "type" : "integer",
      "description": "cut-off frequency in second",
      "enum" :[7200, 5400],
      "default" : 5400
    },
    "MULTITASK" : {
      "type" : "string",
      "description": "Submit jobs through the multi task script",
      "enum"  :["yes","no"],
      "default" : "no"
    },
    "BDLIB" : {
      "type" : "string",
      "description": "Boundary experiment",
      "default" : "ECMWF"
    },
    "NAMELIST_BASE": {
      "type": "string",
      "description": "Input for namelist generation (harmonie|alaro1)",
      "enum": [
        "harmonie",
        "alaro1"
      ],
      "options": {
        "enum_title": [
          "harmonie | The default HARMONIE namelist base nam/harmonie_namelists.pm",
          "alaro1 | For ALARO-1 baseline with only a few configurations available nam/alaro1_namelists.pm"
        ]
      },
      "default": "alaro"
    },
    "RUNNING_MODE": {
      "type": "string",
      "description": "Operational implies that Not STAGE is done for MARS requests and No assimilation is done if no obserations are found by Bator",
      "enum": [
        "research",
        "operational"
      ],
      "default": "research"
    },
    "SIMULATION_TYPE": {
      "type": "string",
      "enum": [
        "nwp",
        "climate"
      ],
      "default": "nwp"
    },
    "SINGLEOBS": {
      "type": "string",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    },
    "USE_MSG": {
      "type": "string",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    },
    "MSG_PATH": {
      "type": "string",
      "default": "$SCRATCH/CLOUDS"
    },
    "Config": {
      "$ref": "config.schema.json"
    },
    "hostdescriptions": {
      "$ref": "hostdescriptions.schema.json"
    }
  }
}