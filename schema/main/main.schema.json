{
  "type" : "object", 
  "required" : [
    "DTGBEG",
    "DTGEND",
    "GITURL",
    "GITBRANCH",
    "RUNNING_MODE",
    "SIMULATION_TYPE",
    "Paths",
    "Config",
    "MAIL_ON_ABORT"
  ],
  "properties": {
    "DTGBEG": {
      "$ref": "date.schema.json"
    },
    "DTGEND": {
      "$ref": "date.schema.json"
    },
    
    "GITURL" : { 
      "type" : "string",
      "format" : "url",
      "default" : "https://git.hirlam.org/Harmonie_experiments"
    },
    "GITBRANCH" : { 
      "type" : "string",
      "description" : "We run: git clone -b $GITBRANCH --single-branch $GITURL" 
    },

    "RUNNING_MODE" : {
      "type" : "string",
      "enum" : [
        "research", 
        "operational"
      ],
      "default" : "research"
    },
    "SIMULATION_TYPE" : { 
      "type" : "string",
      "enum" : [ 
        "nwp",
        "climate"
      ],
      "default" : "nwp" 
    },
    "Paths" : {
      "$ref" : "paths.schema.json"
    },
    "Config" : {
      "$ref" : "config.schema.json"
    },
    "hostdescriptions" : {
      "$ref" : "hostdescriptions.schema.json"
    }, 
    "MAIL_ON_ABORT" : {
      "$ref" : "emails.schema.json"
    }
  }
}
