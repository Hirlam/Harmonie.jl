{
  "type": "object",
  "required": [
    "DOMAIN",
    "TOPO_SOURCE",
    "GRID_TYPE",
    "VLEV"
  ],
  "properties": {
    "DOMAIN" : {
       "$ref" : "domain.schema.json"
    },
    "TOPO_SOURCE": {
      "type": "string",
      "title": "Input source for orography",
      "enum": [
        "gmted2010",
        "gtopo30"
      ],
      "default": "gmted2010"
    },
    "GRID_TYPE": {
      "type": "string",
      "title": "Type of grid",
      "enum": [
        "LINEAR",
        "QUADRATIC",
        "CUBIC"
      ],
      "default": "LINEAR"
    },
    "VLEV": {
      "type": "string",
      "title": "Vertical level definition",
      "enum": [
        "ECMWF_90",
        "HMS_49",
        "ECMWF_60",
        "HIRLAM_40",
        "HIRLAM_60",
        "MF_60",
        "MF_70",
        "MF_90",
        "40",
        "65",
        "Prague_87",
        "37"
      ],
      "default": "65"
    }
  }
}
